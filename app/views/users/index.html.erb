<div class="container">
  <div class="row align-items-center">
    <h1>Users</h1>
  </div>
</div>
<div class="grid container align-items-center">
   <div class="text-center p-3">

  <% @users.each do |user| %>
    <table>
  <thead>
  <ul>
 
  
        <%= user.email %> 
        
        </thead>
        <tbody>
        <tr>
        <grid item xs={6}> <%=link_to "Edit User", edit_user_path(user) , class:"btn btn-dark";%>  </grid>
        <grid item xs={6}><%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Do you want to delete this user?" } , class:"btn btn-dark";%>  </grid>
        <grid item xs={6}><%=link_to "User's Notes", "/users/#{user.id}/notes", class:"btn btn-dark"; %> </grid>
        <grid item xs={6}><%=link_to "User's Collections", "/users/#{user.id}/collections" , class:"btn btn-dark";%> </grid>
        </tr>
       
        </tbody>
        </table>
       
  <% end %>
</ul>
</div>
</div>
<div class="text-center">
<div class ="btn-group gap-2 col-md-2  mx-3 " >
<%=link_to "New Note", new_note_path, class:"btn btn-dark";%>
</div>
</div>