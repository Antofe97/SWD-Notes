<h1>User</h1>

<ul>
  <% @users.each do |user| %>
    <li>
        <span>
        <%= user.email %> - <%=link_to "Edit User", edit_user_path(user) %> 
                            - <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Do you want to delete this user?" } %></li> 
                            - <%=link_to "User's Notes", "/users/#{user.id}/notes" %>
                            - <%=link_to "User's Collections", "/users/#{user.id}/collections" %>
        </span>

    </li>
  <% end %>
</ul>

<%=link_to "New Note", new_note_path, class:"boton";%>