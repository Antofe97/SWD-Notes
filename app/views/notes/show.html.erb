
<div class="text-center">
  <h1> <%= @note.title %> </h1>
      <p style="color:white">
        Note created by: <%= @note.user.email %>
      </p>
      

<div class="container p-3 my-3 bg-dark text-white"
<p> <%= @note.body %> </p>
  <br>
<img class="img-responsive" src="<%= @note.image%>" width="460" height="345">

</div>
<p style="color:white">
Collection: 
<% if @collection %>
  <%= @collection.name %>
<%else%>
  None
<%end%>
</p>

</div>
<div class="text-center">
  <div class ="btn-group gap-2 col-md-2  mx-3" >
<ul>
  <%= link_to"Edit", edit_note_path(@note), class: "btn btn-dark" %></li>
  <%= link_to "Delete", note_path(@note), class:"btn btn-dark",
                  method: :delete,
                  data: { confirm: "Do you want to delete this note?" } %></li>
</ul>
</div>
</div>
