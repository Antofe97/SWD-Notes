
<h1> <%= @note.title %> </h1>
<div class="container">
<p style="color:white">
  Note created by: <%= @note.user.email %>
</p>
</div>
 
<hr>
<div class="container">
  <p> <%= @note.body%> 
    </p>
<img src="<%= @note.image %>" class="image2">
</div>

<ul>
  <%= link_to"Edit", edit_note_path(@note), class: "boton" %></li>
  <%= link_to "Delete", note_path(@note), class:"boton",
                  method: :delete,
                  data: { confirm: "Do you want to delete this note?" } %></li>
</ul>
