
<h1> <%= @note.title %> </h1>

<p>
  Nota creada por: <%= @note.user.email %>
</p>

<p> <%= @note.body %> </p>

<img src="<%= @note.image %>">

<ul>
  <%= link_to"Edit", edit_note_path(@note), class: "boton" %></li>
  <%= link_to "Delete", note_path(@note), class:"boton",
                  method: :delete,
                  data: { confirm: "Do you want to delete this note?" } %></li>
</ul>