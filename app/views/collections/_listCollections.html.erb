
<div class="container">
  <div class="row align-items-center">
    <h1>Collections</h1>
    <p class = "text-center" id="notice"><%= notice %></p>
  </div>
</div>
<div class="text-center">
<div class ="btn-group gap-2 center mx-3 " >
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      
    </tr>

  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= link_to collection.name, "collections/#{collection.id}/notes" %></td>
        <td>
        <td><%= link_to 'Edit', edit_collection_path(collection), class:"btn btn-dark"; %></td> 
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-dark"; %></td>
        </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>